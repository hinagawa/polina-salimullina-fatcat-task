{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "types": ["node", "vite/client"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
        "@homework-task/*": ["src/*"]
    }
  },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "src/types/**/*.d.ts", "vite-env.d.ts"]
}
